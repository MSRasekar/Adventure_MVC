@model Adventure_MVC.Models.RegistrationDTO

<style>
    body {
        background-color: #f4f4f4;
    }

    .Registration-container {
        max-width: 400px;
        margin: auto;
        margin-top: 50px;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .btn-register {
        background-color: #007bff;
        color: #fff;
    }
</style>

<div class="container">
    <div class="Registration-container mt-4" id="registerForm">
        <h2 class="text-center mb-4">Registration</h2>
        <form asp-controller="Home" asp-action="Register" method="post">
            <div class="text-danger text-center">
                @Html.ValidationSummary()
            </div>
            <div class="form-group my-2">
                <input type="text" asp-for="Username" class="form-control" placeholder="Username" required>
            </div>
            <div class="form-group my-2">
                <input type="email" asp-for="Email" class="form-control" placeholder="Email" required>
            </div>
            <div class="form-group my-2">
                <input type="text" asp-for="Mobile" class="form-control" placeholder="Mobile" required>
            </div>
            <div class="form-group my-2">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-lg btn-block btn-register my-2" onclick="showAlert()">Register</button>
        </form>

        <div class="text-center mt-3">
            <p>Already have an account? <a asp-controller="Home" asp-action="Login" class="btn-login">Login</a></p>
        </div>
    </div>
</div>
<script>
    function showAlert() {
        // You can customize the alert message
        alert('Registration successful!');
    }
</script>
