@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Trekking Adventures</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        body {
            padding-top: 56px;
        }

        header {
            background: #343a40;
            color: #ffffff;
            padding: 10px 0;
        }

        .jumbotron {
            background-color: darkseagreen;
            color: #ffffff;
            padding: 100px 0;
            text-align: center;
        }

        .event-info {
            background-color: #59d4fae8;
            padding: 50px 0;
        }

        footer {
            background: #343a40;
            color: #ffffff;
            padding: 10px 0;
            position: static;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">Trekking Adventures</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
    </nav>

    <!-- Jumbotron -->
    <div class="jumbotron">
        <h1 class="display-4">Experience the thrill of trekking with us!</h1>
        <p class="lead">Join our adventurous trekking events and explore breathtaking landscapes.</p>
        <a class="btn btn-primary btn-lg" href="#events" role="button">Upcoming Events</a>
    </div>

    <!-- Event Information -->
    <section id="events" class="event-info">
        <div class="container">

            <h2 class="text-center mb-4">Upcoming Events</h2>
            <!-- Add your event details here -->
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img src="event1.jpg" class="card-img-top" alt="Event 1">
                        <div class="card-body" style="background-color:#7b7676">
                            <h5 class="card-title">Event 1</h5>
                            <p class="card-text">Description of Event 1.</p>
                            <a  asp-controller="Home" asp-action="Events" class=" btn btn-dark">More Info </a>
                            
                        </div>
                    </div>
                </div>
           

                <div class="col-md-4">
                    <div class="card">
                        <img src="event2.jpg" class="card-img-top" alt="Event 2">
                        <div class="card-body">
                            <h5 class="card-title">Event 2</h5>
                            <p class="card-text">Description of Event 2.</p>
                            <a href="Events.cshtml" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>

               




            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <h2 class="text-center mb-4">Contact Us</h2>
            <p class="text-center">Have questions or want to join an event? Reach out to us!</p>
            <p>mobile:123456789 </p>
            <p> mail:adventures@gmail.com</p>
            <!-- Add your contact form or information here -->
        </div>
    </section>

 

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>

